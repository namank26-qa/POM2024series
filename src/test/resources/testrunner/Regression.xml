<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="3" parallel="tests" verbose="4">
	
	
	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener"/>
		<listener class-name="com.qa.opencart.listeners.TestAllureListener"/>
		<listener class-name="com.qa.opencart.listeners.AnnotationTransformer"/>
	</listeners>
	 
	<test name="Login Page Test_firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	
	<test name="Home Page Test_firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test>
	<test name="Home Page Test_Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test>
	
	 
	<test name="Product Info Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoTest" />
		</classes>
	</test>
	<test name="Product Info Page Test">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoTest" />
		</classes>
	</test>
	
	<!-- 
	<test name="Shopping Cart Page Test">
		<classes>
			<class name="com.qa.opencart.tests.ShoppingCartPageTest" />
		</classes>
	</test>

-->


</suite>	